doctype 5
html
  head
    block head
      title= title
    
    block css
      style(type='text/css')
        @import '/lib/dijit/themes/claro/claro.css';
        @import '/css/global.css';
    block scripts
      script
        dojoConfig = {
          async: true
        };
      script(src='/lib/dojo/dojo.js')
  body.claro
    #wrap_top
      block header
        #header
          h1= title
          p= subtitle
      block navigation
        #nav
          ul
            li 
              a.button(href="/") home
            li 
              a.button(href="#") dojo
            li 
              a.button(href="#") photos
            li 
              a.button(href="/cv") cv/résumé
            li 
              a.button(href="//blog.kitsonkelly.com/") blog
    #wrap_cont
      #section
        block content
      #footer
        block footer
