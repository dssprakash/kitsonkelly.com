doctype html
html
  head
    block head
      link(rel="icon", type="png", href="images/logo_16.png")
      title #{subtitle} &ndash; #{title}

    block css
      link(rel='stylesheet', type='text/css', href='//fonts.googleapis.com/css?family=Gochi+Hand|Exo+2:400,700')
      link(rel='stylesheet', type='text/css', href='//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
      link(rel='stylesheet', type='text/css', href='/css/site.css', media='all')
    block scripts
      script(type="text/javascript").
        dojoConfig = {
          async: 1,
          baseUrl: "#{root}/",
          packages: [{
              name: "dojo",
              location: "dojo"
            },{
              name: "dijit",
              location: "dijit"
            },{
              name: 'core',
              location: 'core'
            },{
              name: "kitsonkelly-client",
              location: "kitsonkelly-client"
            }],
          deps: ["kitsonkelly-client/main"]
        };
      script(type="text/javascript", src='#{root}/dojo/dojo.js')

  block body
    .head
      p #{title}
    .nav
      ul
        li
          a(href='/') Home
        li
          a(href='/cv') CV/Résumé
        li
          a(href='/code') Code
        li
          a(href='/photos') Photos
        li
          a(href='http://blog.kitsonkelly.com/', target="_blank") Blog
    .main
      block content
    .foot
      .copy Copyright &copy; 2013 - 2014 &ndash; All Rights Reserved
