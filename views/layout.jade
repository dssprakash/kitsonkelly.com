doctype 5
html
  head
    block head
      link(rel="icon", type="png", href="images/kpk_logo_16.png")
      title= title

    block css
      style(type='text/css', media="all")
        @import '/lib/dijit/themes/claro/claro.css';
        @import '/css/global.css';
      link(rel="stylesheet", type='text/css', href='/css/print.css', media='print')
    block scripts
      script(type="text/javascript")
        dojoConfig = {
          async: true,
          deps: ["kitsonkelly/src"]
        };
      script(type="text/javascript", src='/lib/dojo/dojo.js')

    script(type="text/javascript")
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-325583-3']);
      _gaq.push(['_trackPageview']);
       
      (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  body.claro
    #wrap_top
      block header
        #header
          h1= title
          p= subtitle
      block navigation
        #nav
          ul
            li 
              a.button(href="/", id="navhome", rel="section") home
            li 
              a.button(href="/dojo", id="navdojo", rel="section", title="Dojo Toolkit Stuff") dojo
            li 
              a.button(href="#", rel="section", title="Photobug Me") photos
            li 
              a.button(href="/cv", id="navcv", rel="section", title="Hire Me") cv/résumé
            li 
              a.button(href="//blog.kitsonkelly.com/", target="_blank", title="Seven Foot Tall Cactus") blog
    #wrap_cont
      #section
        block content
      #footer
        block footer
