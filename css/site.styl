a
  text-decoration none

hr
  clear both
  float none
  width 65%
  height 2px
  border none

h1
h2
h3
h4
h5
h6
  text-align center
  font-family header-font

pre
  margin 1em
  padding 1em
  color theme-paper

.header
  font-family header-font
  text-align center
  > ul
    list-style none outside none
    margin 0
    padding 0
    font-size 1.3em
    > li
      display inline-block
      padding 0
      a
        color theme-paper
        display inline-block
        margin 0
        padding 0.5em
        transition-duration 0.1s
        &:hover
          transition-duration 0.2s
          background-color theme-paper

.content
  margin-top 2px
  h2
    margin-bottom 2em

.right
  float right
  margin 0 2em 1em 1em
  padding 1px
  width 250px
  text-align center
  h1
    font-size 1.2em
    margin 2px 0
    padding 0 3px 0
  > ul
    list-style none
    margin 0
    padding 0
    > li
      padding 0
      margin 0
      a
        color theme-paper
        display block
        padding 0.7em
        transition-duration 0.1s
        &:hover
          font-weight bold
          background-color theme-paper
          transition-duration 0.2s

.left
  margin 1em 324px 1em 2em
  padding 1em

.left
.main
  a
    text-decoration underline
    font-weight bold
    transition-duration 0.2s
    &:hover
      text-decoration none
      transition-duration 0.2s

.main
  margin 2em
  padding 1em

.footer
  clear both
  text-align center
  margin-top 2em
  padding 1em
  font-size 0.75em