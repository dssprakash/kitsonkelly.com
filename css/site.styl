@import "nib"

theme-paper = #e9dbc9
theme-blue = #545f64
theme-blue-link = #3a4854
theme-blue-hover = #7d8280
theme-green = #566456
theme-green-link = #1a201d
theme-green-hover = #7c8373
theme-orange = #966b4b
theme-orange-link = #8c5d3a
theme-orange-hover = #ae8d71
theme-red = #924838
theme-red-link = #893a2a
theme-orange-hover = #a36656

header-font = 'Averia Libre', cursive
text-font = 'Lato', sans-serif

body
  image '/images/background.png'
  background-color theme-paper
  font-family text-font
  margin 0
  padding 0
  &.blue
    color theme-blue
    hr
      background linear-gradient(left center, rgba(theme-blue, 0) 0%, rgba(theme-blue, 1) 10%, rgba(theme-blue, 1) 90%, rgba(theme-blue, 0) 100%)
    pre
      background-color theme-blue
    .header
      background-color theme-blue
      > ul > li a:hover
        color theme-blue
    .content
      border-top 2px solid theme-blue
    .right
      border 2px solid theme-blue
      h1
        border-bottom 2px solid theme-blue
      ul > li a
        background-color theme-blue
        &:hover
          color theme-blue
          background-color theme-paper
    .left
      border 6px double theme-blue
    .left
    .main
      a
        color theme-blue-link
        &:hover
          color theme-blue-hover
    .main
      border 6px double theme-blue
    .footer
      border-top 3px solid theme-blue
  &.green
